
<!--警告模态框-->
<template name="modal_alert">
    <view class="modal" wx:if="{{show}}">
        <view class="main">
            <view class="title">{{obj.title}}</view>
            <text class="content" selectable="true">{{obj.content}}</text>
            <view class="btns">
                <view class="btn" bindtap="ok">
                    {{obj.ok_text?obj.ok_text:'确定'}}
                </view>
            </view>
        </view>
        <view class="mask"></view>
    </view>
</template>