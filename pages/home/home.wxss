.list-item .top{
    width:100%;
}
.list-item .top .user_icon{
    width:12%;
    height:90rpx;
}
.list-item .top .info{
    width:88%;
    padding-left:20rpx;
}
.list-item .top .tags{
    width:70%;
}
.list-item .top .tags .tag{
    font-size: 30rpx;
    background-color: #e5e5e5;
    color: #999;
    border-radius: 10rpx;
    padding:0 10rpx;
    margin-right:10rpx;
    border:1px solid #e5e5e5;
}
.list-item .top .tags .tag.stick{
    background-color: #80bd01;
    color:#fff;
    border:1px solid #80bd01;
}
.list-item .top .tags .tag.good{
    background-color: transparent;
    color:#f00;
    border:1px solid #f00;
}
.list-item .top .time{
    width:30%;
    color:#ccc;
    font-size: 30rpx;
    text-align: right;
}

.list-item .title{
    width:100%;
    padding-top:20rpx;
}
.list-item .user_name{
    width:45%;
    color:#ccc;
    font-size: 30rpx;
    padding-top:10rpx;

    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.list-item .visit{
    width:55%;
    color:#ccc;
    font-size: 30rpx;
    padding-top:10rpx;
    text-align: right;
}

