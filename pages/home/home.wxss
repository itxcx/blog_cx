view{
    display: inline-block;
}
text{
    display: inline-block;
}
.header{
    position:fixed;
    top:0;
    left:0;
    width:100%;
}
.header .types{
    width:100%;
    background-color: #444;
    color:#ccc;
    display: flex;
}
.header .types .type{
    flex:1;
    text-align: center;
    padding:25rpx 0;
}
.header .types .type.selected{
    color:#80bd01;
}
.main{
    margin-top:90rpx;
}

.list-item{
    padding:25rpx;
    /*border-bottom:1px solid #ebebeb;*/
}
