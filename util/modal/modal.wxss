.modal{
    position: fixed;
    width:100%;
    height:100%;
    top:0;
    left:0;
}
.modal>.mask{
    position: fixed;
    width:100%;
    height:100%;
    top:0;
    left:0;
    background-color: #000;
    opacity: .8;
    z-index: 100;
}
.modal>.main{
    position: fixed;
    width:80%;
    min-height: 50px;
    top:20%;
    left:0;
    right:0;
    margin:0 auto;
    background-color: #fff;
    z-index: 101;
}